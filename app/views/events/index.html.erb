<p id="notice"><%= notice %></p>

<h1><%= @title %></h1>

<%= link_to 'Crear evento', new_event_path, class: "btn btn-dark" %>

<div class="table-container">
  <table class="table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Nombre</th>
        <th>Fecha</th>
        <th>Jugadores</th>
        <th>Tipo</th>
        <th>Juego</th>
        <th>Estado</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each_with_index do |event, index| %>
        <tr>
          <td><button aria-expanded="false" 
            aria-controls="accordion<%=index%>" 
            data-bs-target="#accordion<%=index%>" 
            data-bs-toggle="collapse" 
            class="accordion-toggle btn btn-dark btn-xs">
              <%= octicon "eye", :height => 16, :class => "white-icon" %>
          </button></td>
          <td><%= event.name %></td>
          <td><%= event.date %></td>
          <td><%= event.player_summary %></td>
          <td><%= event.ruling.name %></td>
          <td><%= event.game.name %></td>
          <td><%= event.event_status.name %></td>
          <td><%= link_to 'Administrar Jugadores', add_players_path(event.id) %></td>
          <td><%= link_to 'Editar', edit_event_path(event) %></td>
          <td><%= link_to 'Eliminar', event, method: :delete, data: { confirm: 'Â¿Seguro weon? Esto es irreversible.' } %></td>
        </tr>

        <tr>
          <td colspan="10" class="hiddenRow">
              <div id="accordion<%=index%>" class="accordion-body collapse">
                <%= event.description %>
                <% unless event.link.empty? then %>
                  <br/>
                  <br/>
                  <%= link_to "Link del evento", event.link %>
                <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

